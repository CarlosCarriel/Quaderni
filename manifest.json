{
  "manifest_version": 3,
  "name": "Quaderni",
  "version": "1.1.0",
  "description": "Asistente técnico local con IA (Edge Computing). Traduce, explica código y define términos sin conexión a servidores externos.",
  "author": "CFCA",
  "permissions": ["tabs", "activeTab", "scripting", "storage", "clipboardRead", "notifications"],
  "host_permissions": [
  "http://localhost:11434/*",
  "http://127.0.0.1:11434/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quaderni",
    "default_icon": "icon.png"
  },
  "commands": {
    "open_stats": {
      "suggested_key": { "default": "Ctrl+Shift+S" },
      "description": "Abrir estadísticas"
    },
    "run_health_check": {
      "suggested_key": { "default": "Ctrl+Shift+H" },
      "description": "Comprobar salud de Ollama"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png", "stats.html", "stats.js", "chart.js", "lib/network.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
